{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 80,
        "hop_length": 160
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
    ],
    "spectrogram": [
      {
        "type": "FrequencyMasking",
        "args": {
          "freq_mask_param": 27
        }
      },
      {
        "type": "MultiTimeMasking",
        "args": {
          "time_mask_param": 15,
          "p": 0.05,
          "n": 10
        }
      }
    ]
  },
  "arch": {
    "type": "Conformer",
    "args": {
      "n_feats": 80,
      "encoder_layers": 16,
      "encoder_dim": 256,
      "decoder_layers": 1,
      "decoder_dim": 640,
      "attention_heads": 4,
      "conv_kernel_size": 31,
      "feed_forward_expansion": 4,
      "encoder_dropout": 0.1,
      "feed_forward_dropout": 0.1,
      "attention_dropout": 0.1,
      "conv_dropout": 0.1
    }
  },
  "data": {
    "train": {
      "batch_size": 16,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 400,
            "data_dir": "/kaggle/input/librispeech-asr-wav-dataset"
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 20.0,
            "max_text_length": 400,
            "data_dir": "/kaggle/input/librispeech-asr-wav-dataset"
          }
        }
      ]
    },
    "val": {
      "batch_size": 16,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "data_dir": "/kaggle/input/librispeech-asr-wav-dataset"
          }
        }
      ]
    },    
    "test-clean": {
      "batch_size": 16,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "data_dir": "/kaggle/input/librispeech-asr-wav-dataset"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-4,
      "betas": [0.9, 0.98],
      "eps": 1e-9,
      "weight_decay": 1e-6
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {
      "zero_infinity": true
    }
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "BeamSearchWERMetric",
      "args": {
        "name": "WER (beamsearch)",
        "beam_size": 3
      }
    },
    {
      "type": "BeamSearchCERMetric",
      "args": {
        "name": "CER (beamsearch)",
        "beam_size": 3
      }
    }
  ],
  "lr_scheduler": {
    "type": "TransformerLrScheduler",
    "args": {
      "d_model": 256,
      "warmup_steps": 10000
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "wandb_run_name": "conformer_big",
    "len_epoch": 400,
    "grad_norm_clip": 10,
    "accum_iters": 2
  }
}
