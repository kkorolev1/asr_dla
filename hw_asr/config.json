{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
    ],
    "spectrogram": [
    ]
  },
  "arch": {
    "type": "Conformer",
    "args": {
      "n_feats": 128,
      "encoder_layers": 16,
      "encoder_dim": 144,
      "encoder_dropout": 0.1,
      "attention_heads": 4,
      "decoder_layers": 1,
      "decoder_dim": 320,
      "conv_kernel_size": 31,
      "feed_forward_dropout": 0.1,
      "attention_dropout": 0.1,
      "conv_dropout": 0.1
    }
  },
  "data": {
    "train": {
      "batch_size": 16,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 16,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          }
        }
      ]
    },
    "test-clean": {
      "batch_size": 16,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "betas": [0.9, 0.98],
      "eps": 1e-9
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {
      "zero_infinity": true
    }
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "ExponentialLRWithWarmup",
    "args": {
      "max_lr": 0.0042,
      "warmup": 10000
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "wandb_run_name": "conformer_argmax_noaug",
    "len_epoch": 500,
    "grad_norm_clip": 10
  }
}
